active()
    .isActive
        color: text-color-menu-active !important;
    &:hover
        color: text-color-menu-active !important;

allowVerticalAlign()
    &:before 
        content: '';
        display: inline-block;
        vertical-align: middle;
        height: 100%;

headingText()
    font-family: "Kreon", serif;
    font-weight: 300;
    font-size: 1.42857em;
    color: black;
bodyText()
    font-family: "Droid Sans", sans-serif;
    font-size: 0.85714em;
    color: text-color-light-grey;

a
    text-decoration: none !important;

.row
    margin-bottom: 30px;
.shadowed-text 
    text-shadow: 1px 1px shadow-color

.content-container
    max-width: 974px;
    padding: 0px 7px;
#app-container
    margin-bottom: 30px;

.main-inner-wrapper
    padding: 0px 55px;
    @media screen and (max-width:767px)
        padding: 0px;

footer
    bodyText();
    padding: 0px 55px;
    text-align: right;
    color: text-color-light-grey-footer;
    strong
        color: text-color-light-grey;
        font-weight: normal;

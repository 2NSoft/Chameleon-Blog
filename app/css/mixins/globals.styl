shadow-color = rgb( 229, 229, 229 );
text-color-search = rgb( 194, 194, 194 );
text-color-menu-inactive = rgb( 57, 57, 57 );
text-color-menu-active = rgb( 66, 125, 139 );
text-color-carousel-button = rgb( 123, 146, 151 );
text-color-light-grey = rgb( 146, 146, 146 ); 
text-color-light-grey-footer = rgb( 205, 205, 205 ); 
text-color-footer-slogan = rgb( 102, 146, 156 );
text-color-copyright = rgb( 113, 113, 113 );

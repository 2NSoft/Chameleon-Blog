@require 'mixins/globals'

.navbar-default
    background-color: white;

.nav-brand
    display: flex;
    width: 210px;
    line-height: 1.2em;
    align-items: center;
    position: absolute;
    top: 32px;
    left: 36px;
    text-align: center;
    &:hover
        text-decoration: none;
    img 
        display: block;
        width: image-size('./../images/Logo.png')[0]
        height: image-size('./../images/Logo.png')[1]
    .logo-text-container
        display: block;
        margin: 5px 5px;
        .nav-logo-text
            font-family: "BlackJackRegular", serif;
            font-size: 32px;
            color: black;
        .nav-slogan
            font-family: "Kreon", serif;
            font-size: 12px;
            color: text-color-green;
            text-transform: uppercase;
.nav-search
    position: absolute;
    right: 1px;
    top: 1px;
    .input-search
        width: 136px;
        height: 28px;
        font-family: Georgia, Times, Times New Roman, serif;
        font-size: 11px;
        color: black;
        border: 0;
        padding-left: 12px;
        border-left: 1px solid text-color-search;
        background-color: bg-color-footer;
        &::placeholder
            font-style: italic;
            text-shadow: 1px 1px shadow-color;
            color: text-color-search;
    .btn-search
        position: absolute;
        right: 0px;
        top: 7px;
        width: 24px;
        height: 16px;
        border: 0;
        font-size: 12px;
        background: bg-color-footer;;
        color: text-color-search;
        &:hover
            cursor: pointer;
        
.navbar-collapse
    ul 
        margin-top: 50px;
        font-family: "Kreon", serif;
        font-weight: 300;
        li 
            color: text-color-menu-inactive !important;
            padding: 15px 12px; 
            active()
            a   
                // active()
                padding: 0;
                text-transform: uppercase;

nav 
    height: 96px;
.navbar
    margin-bottom: 15px;
.navbar-default
    border 0;

@media screen and (max-width: 767px)
    nav 
        height: 115px;
    .nav-brand
        top: 16px;
        left: 8px;
    .nav-search
        position: absolute;
        right: 2px;
        top: 75px;
        .input-search
            height: 32px;
            padding-left: 12px;
        .btn-search
            top: 9px;
    .navbar-toggle
        position: absolute;
        margin: 8px 15px 0px 8px;
        top: 68px;
        height: 32px;
        padding: 4px 8px;
    .navbar-collapse
        ul 
            margin-top: 112px;
            li 
                border-bottom: 1px solid text-color-search;
                background: #ffffff;
                z-index: 1;
                &:first-child
                    border-top: 1px solid text-color-search;




{{>location}}
<section class="row main-quote">
    {{>quote}}
</section>
<div class="container-fluid main-inner-wrapper row">
    <main class="col-md-8 main-bordered">
        {{>blogPost post}}
        <h2 class="comment-count">
            {{post.comments.length}} Comments
        </h2>
        {{#each post.comments.comments}} 
            {{>comment this}} 
        {{/each}} 
        {{#if user.signedIn}}
        <form id="comment-form">
            <h2>Leave a Reply</h2>
            <div class="form-group half-width">
                <input name="name" id="comment-name" value="User: {{user.username}}" disabled>
            </div>
            <div class="form-group half-width">
                <input name="email" id="comment-email" value="E-mail: {{user.email}}" disabled>
            </div>
            <div class="form-group">
                <textarea form="comment-form" name="message" id="comment-message" placeholder="Message" required></textarea>
            </div>
            <button class="chameleon-btn" role="submit" id="comment-send-btn">Send comment</button>
        </form>
        {{else}}
        <form>
            <h2>You need to be signed in to comment!</h2>
            <button class="chameleon-btn" role="submit" id="signin-btn">Sign in</button>
        </form>
        {{/if}}
    </main>
    <aside class="col-md-4">
        {{>list quotes}} {{>list archives}} {{>list recentPosts}}
    </aside>

</div>
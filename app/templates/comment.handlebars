<article class="wrapper-comment">
    <div class="wrapper-comment-image">
        <img src="../uploads/users/{{author.profilePic}}" alt="{{autor.name}}'s photo'">
    </div>
    <h3 class="comment-header">{{author.name}}</h3>
    <span class="comment-date">
        {{createdOn}}
    </span>
    <p class="comment-text">
        {{text}}
    </p>
    <button class="chameleon-btn shadowed-text" data-comment="{{commentId}}" >Read more</button>
    <div class="wrapper-baloon">
        <img src="../images/comment-arrow.png">
    </div>
</article>
<div class="container-fluid main-inner-wrapper">
    <main>
        <form>
            <h2>Sign in</h2>
            <div class="form-group">
                <input type="text" name="username" id="sign-in-username" placeholder="Username" autocomplete="off" required>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="sign-in-password" placeholder="Password" required>
            </div>
            <button class="chameleon-btn" role="submit">Sign In</button> or <button id="sign-in-register" class="chameleon-btn">Register</button>
        </form>
    </main>
</div>
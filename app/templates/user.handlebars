{{>location}}
<section class="row main-quote">
    {{>quote}}
</section>
<div class="container-fluid main-inner-wrapper row">
    <main class="col-md-8 main-bordered">
        {{#each posts}} 
            {{>blogPost this}}
            <div class="clearfix">
                <button class="chameleon-btn user-read-btn shadowed-text" data-post="{{this._id}}">Read more</button>
            </div>
        {{/each}}
        <nav>
            <ul class="pagination justify-content-end">
                {{#each pages}}
                    <li class="page-item"><button class="page-link chameleon-btn" data-page="{{this.href}}">{{this.index}}</button></li>
                {{/each}}
            </ul>
        </nav>
    </main>
    <aside class="col-md-4">
        {{>list quotes}} {{>list archives}} {{>list recentPosts}}
    </aside>
</div>